<resources>

    <!-- Base application theme. -->
    <style name="Volunteer_AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="VolunteerEditText" parent="Theme.AppCompat.DayNight">
        <item name="colorControlNormal">@color/volunteer_edit_Normal</item>
        <item name="colorControlActivated">@color/volunteer_edit_activated</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textCursorDrawable">@drawable/volunteer_cursor_color</item>
        <item name="android:textColorHint">@color/volunteer_edit_Normal</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:imeOptions">actionGo</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:cursorVisible">true</item>
    </style>

</resources>
